{
  "name": "@claude-flow/claims-dashboard",
  "version": "0.1.0",
  "description": "Real-time Kanban dashboard for Claude Flow claims management",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot server/index.ts",
    "dev:frontend": "vite",
    "build": "vite build && bun build server/index.ts --outdir=dist/server --target=bun",
    "start": "bun run server/index.ts",
    "db:migrate": "bun run server/migrate.ts",
    "db:ping": "bun run server/ping.ts",
    "lint": "eslint src server --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "postgres": "^3.4.0",
    "@hello-pangea/dnd": "^16.0.0",
    "zustand": "^4.5.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
